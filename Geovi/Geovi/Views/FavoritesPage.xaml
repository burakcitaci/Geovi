<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Geovi.Views.FavoritesPage"
             xmlns:controls="clr-namespace:Geovi.Controls"
              Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="{DynamicResource SecondaryBackgroundColour}">
    
    <Grid RowDefinitions="100,*,*">
        <StackLayout Grid.Row="0" Margin="24,0,10,20" Orientation="Horizontal">
            <Label
                Text="FAVORITES" 
                Style="{StaticResource TitleStyle}" 
                TextColor="White" />
            <Path Data="{StaticResource StarGeometry}" Style="{StaticResource DefaultPathStyle}" 
                  HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand"/>
        </StackLayout>
        <BoxView Grid.Row="1" 
                 Grid.RowSpan="2"
                 CornerRadius="20,20,0,0" 
                 Margin="0"
                 BackgroundColor="{DynamicResource PrimaryBackgroundColour}"/>

    </Grid>
</ContentPage>